{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "client/build" }
      },
      {
        "src": "backend/server.ts",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/server.ts" },
      { "src": "/(.*)", "dest": "client/build/$1" }
    ],
    "env": {
      "MONGODB_URI": "mongodb://localhost:27017/inso-atv"
    }
  }
  